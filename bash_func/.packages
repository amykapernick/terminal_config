update () {
	update_ubuntu
	update_spaceship
	fnm install --lts
	fnm use --lts
	sudo doppler update
	install_utilities
	install_brew
	install_global
	npm-check -gu
}

update_ubuntu () {
	sudo apt update
	sudo apt upgrade
	sudo apt dist-upgrade
	sudo apt install update-manager-core
	sudo do-release-upgrade -d
}

check_ubuntu () {
	lsb_release -a
}

update_node () {
	fnm install $1
	fnm use $1
	fnm default $1
	install_global
}

update_spaceship() {
	npm install -g spaceship-prompt
	NODE_VERSION=$(node -v)
	echo "Node version: $NODE_VERSION"
	ln -sfn ~/.fnm/node-versions/$NODE_VERSION/installation/lib/node_modules/spaceship-prompt/spaceship.zsh ~/.zfunctions/prompt_spaceship_setup
}