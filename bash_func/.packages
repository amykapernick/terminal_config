install_stylelint () {
	npm install --save-dev stylelint-config-property-sort-order-smacss stylelint-scss stylelint-order
}

install_eslint () {
	npm install eslint eslint-config-airbnb-base eslint-plugin-import eslint-plugin-react
}

update () {
	yarn upgrade --latest
	pushit "updated packages"
}

update_packages () {
	git clone $1
	cd "$(basename "$1" .git)"
	yarn install
	yarn upgrade --latest
	pushit "Updated Packages :package:"
	cd ..
}

update_tunnel () {
	if [ -n $1 ]
	then
		cd ~/tmp
		sudo wget https://github.com/agrinman/tunnelto/releases/download/$1/tunnelto-linux.tar.gz
		tar xvzf tunnelto-linux.tar.gz
		sudo mv tunnelto /usr/local/bin/tunnelto
	fi
}


update_ubuntu () {
	sudo apt update
	sudo apt upgrade
	sudo apt dist-upgrade
	sudo apt install update-manager-core
	sudo do-release-upgrade -d
}

check_ubuntu () {
	lsb_release -a
}

install_npm () {
	npm install -g npm-check azure-functions-core-tools license netlify-cli qnm spaceship-prompt doppler
}

update_node () {
	fnm install --lts
	fnm use latest
	fnm default latest
	install_npm
}